    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "vite": "^6.0.3",
    "tailwindcss": "^4.0.0-beta.9",
    "@tailwindcss/vite": "^4.0.0-beta.9",
    "typescript": "^5.7.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@modyfi/vite-plugin-yaml": "^1.1.0",
    "@types/bun": "latest"
  }
