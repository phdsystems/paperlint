{
  "name": "paperlint",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun run css:build && bun run server.ts",
    "build": "bun run css:build && bun run build.ts",
    "css:build": "bunx @tailwindcss/cli -i ./src/index.css -o ./dist/index.css",
    "css:watch": "bunx @tailwindcss/cli -i ./src/index.css -o ./dist/index.css --watch",
    "preview": "bun run build && bunx serve dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit && bun test",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "openai": "^4.76.0",
    "@anthropic-ai/sdk": "^0.32.1",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "typescript": "^5.7.2",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@types/bun": "latest",
    "tailwindcss": "^4.0.0-beta.9",
    "@tailwindcss/cli": "^4.0.0-beta.9"
  }
}
